extend layout

block stylesheet
	link(rel="stylesheet",href="/css/login.css")

block content
	.container
		form.form-signin(role="form",action="/login/github-enterprise",method="post")
			h2.form-signin-heading GitHub Enterprise
			//- .form-group
			label.sr-only(for="domain") Domain
			input.form-control(id="domain", name="domain", placeholder="Domain", value="github.servicechannel.com")
			//- .form-group
			label.sr-only(for="username") Username
			input.form-control(id="username", name="username", type="text", placeholder="Username", value="vhatalski")
			//- .form-group
			label.sr-only(for="password") Password
			input.form-control(id="password", name="password", type="password", placeholder="Password", value="12iBYLzcPR2Ug")
			button.btn.btn-primary.btn-block.btn-lg(type='submit') Login
